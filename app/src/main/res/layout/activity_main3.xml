<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.MaterialComponents.Light.DarkActionBar"
    tools:context=".Main3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:id="@+id/spaceTop"
            android:layout_width="match_parent"
            android:layout_height="40dip" />

        <TextView
            android:id="@+id/txtScored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textAlignment="center"
            android:textSize="45sp" />

        <Space
            android:id="@+id/spaceScored"
            android:layout_width="match_parent"
            android:layout_height="80dip" />

        <TextView
            android:id="@+id/txtMark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="200%" />

        <Space
            android:id="@+id/spaceMark"
            android:layout_width="match_parent"
            android:layout_height="220dip" />

        <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="?attr/colorAccent"
            android:foregroundGravity="right|center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/try_again" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>